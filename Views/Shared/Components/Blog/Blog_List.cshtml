@model IEnumerable<TTTN3.Models.blog>

<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>Tin tức</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var blog in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic" style="height:200px">
                            <img src="@Url.Content("~/Images/Blog/" + blog.blog_Image)" alt="@blog.blog_Title" style="max-width: 100px; max-height: 200px;" />

                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i> @blog.blog_Date?.ToString("MMMM d, yyyy")</li>
                            </ul>
                            <h5><a asp-controller="Blog" asp-action="Blog_Detail" asp-route-blog_Code="@blog.blog_Code">@blog.blog_Title</a></h5>
                            @* <p>@blog.blog_Detail</p> *@
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

