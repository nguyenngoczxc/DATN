@model TTTN3.Models.guarantee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Guarantee_Invoice";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}

<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("~/Images/vali.jpg")"
         style="background-image: url('@Url.Content("~/Images/vali.jpg")'); width:100%;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2 style="color:green">BẢO HÀNH</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index" style="color:green">Trang chủ</a>
                        <span style="color:green">Bảo hành</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="checkout spad" style="width:100%">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="checkout__form">
                    <h4>Chi tiết bảo hành</h4>
                    <form asp-action="CreateGuarantee" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="customer">Khách hàng:</label>
                            <input asp-for="customer" class="form-control" value="@ViewBag.UserName" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="product">Sản phẩm:</label>
                            <input asp-for="product" class="form-control" value="@ViewBag.Product" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="guarantee_Description" class="control-label">Chi tiết lỗi</label>
                            <textarea asp-for="guarantee_Description" class="form-control" id="editor" rows="5"></textarea>
                            <span asp-validation-for="guarantee_Description" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="invoice_Detail_Code" />

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Gửi</button>
                        </div>
                    </form>

                    <div class="form-group">
                        <a asp-action="List_Invoice" asp-controller="Invoice" asp-route-Id="@ViewBag.UserId" class="btn btn-secondary btn-block">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

