@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TTTN3.Models.size

@{
    ViewData["Title"] = "Delete_Size";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xóa kích thước</h1>

<h3>Bạn chắc chắn muốn xóa?</h3>
<div>
    <h4>size</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Mã
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.size_Code)
        </dd>
        <dt class = "col-sm-2">
            Kích thước
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.size_Name)
        </dd>
    </dl>
    
    <form asp-action="Delete_SizeConfirmed" method="post" asp-route-size_Code="@ViewBag.SizeCode">
        <input type="hidden" asp-for="size_Code" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |    
        <a asp-action="List_Size" asp-controller="Size" asp-area="Admin">Danh sách</a>

    </form>
</div>
