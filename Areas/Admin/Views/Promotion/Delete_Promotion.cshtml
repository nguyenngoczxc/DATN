@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TTTN3.Models.promotion

@{
    ViewData["Title"] = "Xóa khuyến mại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xác nhận</h1>

<div>
    <h4>KHuyến mại</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên khuyến mại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.promotion_Title)
        </dd>
        @*  <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.alias)
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.alias)
        </dd> *@

        <dt class="col-sm-2">
            Ảnh đại diện
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/Images/Promotion/" + Model.promotion_Image)" alt="@Model.promotion_Title" style="max-width: 100px; max-height: 100px;" />

        </dd>
        <dt class="col-sm-2">
            Nội dung
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.promotion_Detail)
        </dd>
    </dl>
</div>
<form method="post" asp-action="Delete_PromotionConfirmed" asp-route-promotion_Code="@ViewBag.promotionCode" id="deleteForm">
    @Html.AntiForgeryToken()
    <button id="deleteButton" type="button" class="btn btn-danger">Xóa</button>
    <a asp-action="List_Promotion" class="btn btn-secondary">Hủy</a>
</form>

<script>
    // JavaScript to handle the confirmation
    document.getElementById("deleteButton").addEventListener("click", function () {
        var confirmed = confirm("Bạn chắc chắn muốn xóa?");
        if (confirmed) {
            document.getElementById("deleteForm").submit();
        }
    });
</script>