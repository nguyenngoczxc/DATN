@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TTTN3.Models.promotion

@{
    ViewData["Title"] = "Chi tiết khuyến mại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết khuyến mại</h1>

<div>
    <h4>Khuyến mại</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên khuyến mại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.promotion_Title)
        </dd>
        @*  <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.alias)
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.alias)
        </dd> *@

        <dt class="col-sm-2">
            Ảnh đại diện
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/Images/Promotion/" + Model.promotion_Image)" alt="@Model.promotion_Title" style="max-width: 100px; max-height: 100px;" />

        </dd>
        
        <dt class="col-sm-2">
            Detail
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.promotion_Detail)
        </dd>
    </dl>
    <div>
        <a asp-action="Edit_Promotion" asp-route-Promotion_Code="@Model?.promotion_Code" asp-controller="Promotion" asp-area="Admin">Sửa</a> |
        <a asp-action="List_Promotion" asp-area="Admin" asp-controller="Promotion">Danh sách</a>
    </div>
</div>
