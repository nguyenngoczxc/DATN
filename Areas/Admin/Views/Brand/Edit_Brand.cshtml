@model TTTN3.Models.brand
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit_Brand";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit_Brand</h1>

<h4>brand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit_Brand" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="brand_Code" class="control-label">Brand code</label>
                <input asp-for="brand_Code" class="form-control" readonly />
                <span asp-validation-for="brand_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="brand_Name" class="control-label">Brand name</label>
                <input asp-for="brand_Name" class="form-control" />
                <span asp-validation-for="brand_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List_Brand" asp-controller="Brand" asp-area="Admin"> Brand list</a>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

