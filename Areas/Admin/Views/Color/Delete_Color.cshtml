@model TTTN3.Models.color

@{
    ViewData["Title"] = "Delete Confirmation";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Xác nhận xóa</h2>

<p>Bạn có chắc chắn muốn xóa?</p>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ColorCode
        </dd>
        <dt class="col-sm-2">
            Màu
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ColorName
        </dd>
    </dl>
    <div>
        <form method="post" asp-action="Delete_ColorConfirmed" asp-route-color_Code="@ViewBag.ColorCode" id="deleteForm">
            @Html.AntiForgeryToken()
            <button id="deleteButton" type="button" class="btn btn-danger">Xóa</button>
            <a asp-action="List_Color" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>




<script>
    // JavaScript to handle the confirmation
    document.getElementById("deleteButton").addEventListener("click", function () {
        var confirmed = confirm("Are you sure you want to delete this color?");
        if (confirmed) {
            document.getElementById("deleteForm").submit();
        }
    });
</script>
