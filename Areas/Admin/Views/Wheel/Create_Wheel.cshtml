@model TTTN3.Models.wheel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create_Wheel";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm bánh xe</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create_Wheel" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="wheel_Name" class="control-label">Bánh xe</label>
                <input asp-for="wheel_Name" class="form-control" />
                <span asp-validation-for="wheel_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List_Wheel" asp-controller="Wheel" asp-area="Admin">Danh sách</a>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
