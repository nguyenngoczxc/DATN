@model TTTN3.Models.wheel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete_Wheel";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xóa bánh xe</h1>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <h4>wheel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mã
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.wheel_Code)
        </dd>
        <dt class="col-sm-2">
            Bánh xe
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.wheel_Name)
        </dd>
    </dl>
    
    <form asp-action="Delete_Wheel" method="post" asp-route-wheel_Code="@ViewBag.WheelCode">
        <input type="hidden" asp-for="wheel_Code" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |    
        <a asp-action="List_Wheel" asp-controller="Wheel" asp-area="Admin">Hủy</a>
    </form>
</div>
