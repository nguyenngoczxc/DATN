@model TTTN3.Models.product_Size
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create_Product_Size";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm kích thước</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create_Product_Size" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="product_Code" class="control-label">Sản phẩm</label>
                <select asp-for="product_Code" class ="form-control" asp-items="ViewBag.product_Code"></select>
            </div>
            <div class="form-group">
                <label asp-for="size_Code" class="control-label">Kích thước</label>
                <select asp-for="size_Code" class ="form-control" asp-items="ViewBag.size_Code"></select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List_Product_Size" asp-controller="product_Size" asp-area="Admin">Danh sách</a>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
