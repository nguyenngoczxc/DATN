@model TTTN3.Models.product_Size
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete_Product_Size";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xóa kích thước của sản phẩm</h1>

<h3>Bạn chắc chắn muốn xóa?</h3>
<div>
    <hr />
    <dl>
        <dt class = "col-sm-2">
            Sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.product.product_Name)
        </dd>
        <dt class = "col-sm-2">
            Kích thước
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.size.size_Name)
        </dd>
         class="row">
        <dt class = "col-sm-2">
            Giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete_Product_SizeConfirmed" method="post" asp-route-product_Size_Code="@ViewBag.ProductSizeCode" >
        <input type="hidden" asp-for="product_Size_Code" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="List_Product_Size" asp-controller="product_Size" asp-area="Admin"> Danh sách</a>
    </form>
</div>
