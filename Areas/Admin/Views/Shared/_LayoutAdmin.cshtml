    @RenderSection("Scripts", required: false)
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            jQuery("#editor").each(function () {
                ClassicEditor
                    .create(this)
                    .catch(error => {
                        console.error(error);
                    });
            });
        });
    </script>

