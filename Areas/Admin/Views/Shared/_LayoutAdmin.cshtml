                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="admin" asp-controller="Promotion" asp-action="List_Promotion">
                            <span class="menu-title">Khuyến mại</span>
                            <i class="mdi mdi-table-large menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="admin" asp-controller="Brand" asp-action="List_Brand">
                            <span class="menu-title">Nhà sản xuất</span>
                            <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="admin" asp-controller="Color" asp-action="List_Color">
                            <span class="menu-title">Màu sắc</span>
                            <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="admin" asp-controller="Material" asp-action="List_Material">
                            <span class="menu-title">Chất liệu</span>
                            <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="admin" asp-controller="Size" asp-action="List_Size">
                            <span class="menu-title">Kích thước</span>
                            <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                        </a>
                    </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-area="admin" asp-controller="Wheel" asp-action="List_Wheel">
                            <span class="menu-title">Bánh xe</span>
                            <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="admin" asp-controller="Zipper" asp-action="List_Zipper">
                            <span class="menu-title">Khóa</span>
                            <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" asp-area="admin" asp-controller="role" asp-action="Index_role">
                            <span class="menu-title">Quyền</span>
                            <i class="mdi mdi-table-large menu-icon"></i>
                        </a>
                    </li>
                    
                </ul>
