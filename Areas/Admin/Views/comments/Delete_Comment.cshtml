@model TTTN3.Models.comment
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xóa bình luận</h1>

<h3>Bạn chắc chắn muốn xóa?</h3>
<div>
    <h4>Bình luận</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nội dung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.content)
        </dd>
        <dt class = "col-sm-2">
            Sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.product.product_Name)
        </dd>
        <dt class = "col-sm-2">
            Người dùng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AspNetUser.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete_Comment" method="post">
        <input type="hidden" asp-for="comment_Code" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn chắc chắn muốn xóa?');">
            Xóa
        </button>
        <a asp-action="List_Comment" asp-area="Admin" asp-controller="comments">Danh sách</a>

    </form>
</div>
