        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AspNetUser.UserName)
        </dd>
        <dt class = "col-sm-2">
            Content
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.content)
