@model TTTN3.Models.comment
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết bình luận</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.comment_Code)
        </dd>
        <dt class="col-sm-2">
            Sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.product_Name)
        </dd>
        <dt class="col-sm-2">
            Khách hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AspNetUser.UserName)
        </dd>
        <dt class = "col-sm-2">
            Nội dung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.content)
        </dd>
       
       
    </dl>
</div>
<div>
    <a asp-action="Edit_Comment" asp-route-comment_Code="@Model?.comment_Code">Sửa</a> |
    <a asp-action="List_Comment" asp-area="Admin" asp-controller="comments">Danh sách</a>
</div>
