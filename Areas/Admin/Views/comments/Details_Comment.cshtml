@model TTTN3.Models.comment
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>comment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Comment code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.comment_Code)
        </dd>
        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.product_Name)
