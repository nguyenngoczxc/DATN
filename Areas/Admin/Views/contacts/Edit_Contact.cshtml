@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TTTN3.Models.contact

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa liên hệ</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit_Contact" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="contact_Code" class="control-label">Mã</label>
                <input asp-for="contact_Code" class="form-control" readonly/>
                <span asp-validation-for="contact_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contact_Name" class="control-label">Liên hệ</label>
                <input asp-for="contact_Name" class="form-control" />
                <span asp-validation-for="contact_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="message" class="control-label">Tin nhắn</label>
                <input asp-for="message" class="form-control" />
                <span asp-validation-for="message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sửa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List_Contact" class="btn btn-secondary">Danh sách</a>
</div>

