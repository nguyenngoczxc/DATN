@model TTTN3.Models.contact
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết liên hệ</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Contact code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.contact_Code)
        </dd>
        <dt class = "col-sm-2">
            Contact
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.contact_Name)
        </dd>
        <dt class = "col-sm-2">
            Message
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.message)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit_Contact" asp-route-contact_Code="@Model?.contact_Code">Edit</a> |
    <a asp-action="List_Contact" asp-controller="contacts" asp-area="Admin">List contact</a>

</div>
