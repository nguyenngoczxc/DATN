@model TTTN3.Models.contact
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn chắc chắn muốn xóa?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.contact_Code)
        </dd>
        <dt class = "col-sm-2">
            Liên hệ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.contact_Name)
        </dd>
        <dt class = "col-sm-2">
            Tin nhắn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.message)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
    </dl>
    
</div>
<form method="post" asp-action="Delete_ContactConfirmed" asp-route-contact_Code="@ViewBag.ContactCode" id="deleteForm">
    @Html.AntiForgeryToken()
    <button id="deleteButton" type="button" class="btn btn-danger">Xóa</button>
    <a asp-action="List_Contact" class="btn btn-secondary">Hủy</a>
</form>

<script>
    // JavaScript to handle the confirmation
    document.getElementById("deleteButton").addEventListener("click", function () {
        var confirmed = confirm("Bạn chắc chắn muốn xóa?");
        if (confirmed) {
            document.getElementById("deleteForm").submit();
        }
    });
</script>