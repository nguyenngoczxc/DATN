@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IdentityUser
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Xóa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa tài khoản</h2>

<h3>Bạn chắc chắn muốn xóa tài khoản này?</h3>
<div>
    <h4>Tài khoản</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Tên người dùng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete_account" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Index_account" asp-area="Admin" asp-controller="account" class="btn btn-secondary">Danh sách</a>
        </div>
    </form>
</div>
