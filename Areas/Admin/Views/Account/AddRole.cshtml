@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model TTTN3.Models.ViewModels.AddRoleViewModel


<h2>Add Role to User</h2>

<div>
    <form asp-action="AddRole" asp-controller="Account" method="post">
        <div class="form-group">
            <label asp-for="UserId" class="control-label">User ID</label>
            <input asp-for="UserId" class="form-control" readonly />
        </div>
         <div class="form-group">
            <label asp-for="UserName" class="control-label">User Name</label>
            <input asp-for="UserName" class="form-control" readonly />
        </div> 
        <div class="form-group">
            <label for="roleName">Role Name:</label>
            <select class="form-control" id="roleName" name="roleName">
                @foreach (var roleName in Model.RoleNames)
                {
                    <option value="@roleName">@roleName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Role</button>
            <a asp-action="Index_account" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>


